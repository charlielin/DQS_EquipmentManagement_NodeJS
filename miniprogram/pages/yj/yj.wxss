.window {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  color: #00529D;
  width: 100%;
  height: 100%;
  background-color: #FEFEFE;
}
.input {
  height: 100rpx;
  width: 400rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F9B552;
  color: #00529D;
  border-radius: 10rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.placeholder{
  font-size: 30rpx;
  color:#00529D;
  background-color: #F9B552;
}
.button {
  margin-top:20%;
  width: 500rpx;
  height: 100rpx;
  background-color: #00529D;
  color: #F9B552;
  font-size: 40rpx;
  justify-content: center;
  align-items: center;
}
